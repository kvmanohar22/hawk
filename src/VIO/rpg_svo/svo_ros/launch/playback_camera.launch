<launch>
  <arg name="bag_path" default=""/>
  <arg name="output" default="screen"/>
  <arg name="image_topic" default="/hawk/camera_0/image_raw"/>

  <!-- play rosbag -->
  <node pkg="rosbag" type="play" name="player" args="$(arg bag_path)"/>

  <!-- image viewer -->
  <node pkg="image_view" type="image_view" name="viewer"
    args="image:=$(arg image_topic) _autosize:=true _window_name:=hawk"
    output="$(arg output)"/>
</launch>