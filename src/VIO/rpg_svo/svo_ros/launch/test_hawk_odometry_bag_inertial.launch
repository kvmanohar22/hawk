<launch>
    <!-- TODO: Set this parameter -->
    <arg name="bag_path" default=""/>
    <arg name="start" default="0"/>
    <arg name="calibration" default="$(find svo_ros)/param/hawk/camera0.yaml"/>
    <arg name="image_topic" default="/hawk/camera_0/image_raw"/>
    <arg name="rig" default="monocular"/>

    <!-- start svo hawk pipeline -->
    <include file="$(find svo_ros)/launch/load_svo.launch">
      <arg name="calibration" value="$(arg calibration)"/>
      <arg name="image_topic" value="$(arg image_topic)"/>
      <arg name="rig" value="$(arg rig)"/>
      <arg name="use_motion_priors" value="true"/>
      <arg name="run_inertial_estimator" value="true"/>
    </include>

    <!-- start rviz -->
    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find svo_ros)/rviz_config_hawk.rviz" />

    <!-- start rosbag -->
    <node pkg="rosbag" type="play" name="rosbag" required="true" args="$(arg bag_path) --start=$(arg start)"/>

</launch>
