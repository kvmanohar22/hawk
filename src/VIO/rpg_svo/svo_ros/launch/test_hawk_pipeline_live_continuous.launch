<launch>
    <arg name="calibration" default="$(find svo_ros)/param/hawk/camera_1.yaml"/>
    <arg name="device" default="26807580"/>

    <!-- start camera -->
    <include file="$(find bluefox2)/launch/test_continuous_triggering.launch">
        <arg name="expose_us" value="19000"/>
        <arg name="device" value="$(arg device)"/>
    </include>

    <!-- start svo hawk pipeline -->
    <include file="$(find svo_ros)/launch/load_svo.launch">
        <arg name="calibration" value="$(arg calibration)"/>
    </include>

    <!-- start rviz -->
    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find svo_ros)/rviz_config_hawk.rviz" />

</launch>
