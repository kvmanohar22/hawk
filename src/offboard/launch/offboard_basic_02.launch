<launch>
  <!-- Start mavros -->
  <!-- include file="$(find mavros)/launch/px4.launch" -->
    <!-- arg name="fcu_url" value="/dev/ttyOffboard:921600"/ -->
  <!-- /include -->

  <!-- Start mavros + GAZEBO + PX$ SITL -->
  <include file="$(find px4)/launch/mavros_posix_sitl.launch">

  </include>

  <!-- Offboard node to communicate with autopilot -->
  <node pkg="offboard" type="test_offboard_basic_02" name="offboard" output="screen" />

  <!-- Trajectory planner -->
  <node name="planner" pkg="mav_trajectory_generation_example" type="trajectory_generation_example" output="screen" >
      <rosparam command="load" file="$(find mav_trajectory_generation_example)/cfg/hawk_params.yaml"/>
  </node>

  <!-- Trajectory sampler -->
  <node name="sampler" pkg="mav_trajectory_generation_ros" type="trajectory_sampler_node" output="screen">
      <remap from="path_segments_4D" to="trajectory"/>
  </node>

  <!-- RVIZ to visualize trajectory and execution of drone -->
  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find mav_trajectory_generation_example)/cfg/rviz_view_hawk.rviz" />

</launch>
